<resources>
    <!-- Base themes for dialog activities -->

    <style name="Theme.Dialog.LightBase" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <!--NoActionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--DarkActionBar-->
        <item name="toolbarStyle">@style/Toolbar.Dark.WhiteOverflow</item>
        <!--Light dark actionbar-->
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="windowFixedWidthMajor">@dimen/dialog_fixed_width_major2</item>
        <item name="windowFixedWidthMinor">@dimen/dialog_fixed_width_minor2</item>
        <item name="windowFixedHeightMajor">@dimen/dialog_fixed_height_major2</item>
        <item name="windowFixedHeightMinor">@dimen/dialog_fixed_height_minor2</item>
    </style>

    <style name="Theme.Dialog.DarkBase" parent="Theme.AppCompat.DialogWhenLarge">
        <!--NoActionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--DarkActionBar-->
        <item name="toolbarStyle">@style/Toolbar.Dark</item>

        <item name="windowFixedWidthMajor">@dimen/dialog_fixed_width_major2</item>
        <item name="windowFixedWidthMinor">@dimen/dialog_fixed_width_minor2</item>
        <item name="windowFixedHeightMajor">@dimen/dialog_fixed_height_major2</item>
        <item name="windowFixedHeightMinor">@dimen/dialog_fixed_height_minor2</item>
    </style>

    <!-- end base dialog themes -->
</resources>