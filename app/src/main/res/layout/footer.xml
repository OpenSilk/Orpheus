<org.opensilk.music.ui2.main.FooterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_height"
    android:background="?android:selectableItemBackground">

    <org.opensilk.common.widget.SquareImageView
        android:id="@+id/footer_thumbnail"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"/>

    <ProgressBar
        android:id="@+id/footer_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/footer_thumbnail"
        android:layout_toRightOf="@id/footer_thumbnail"
        android:layout_marginTop="-6dp"
        style="?android:progressBarStyleHorizontal"
        android:max="1000"/>

    <TextView
        android:id="@+id/footer_track_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/footer_thumbnail"
        android:layout_toRightOf="@id/footer_thumbnail"
        android:layout_below="@id/footer_progress"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        tools:text="Track Title"
        android:textAppearance="?android:textAppearanceMedium"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        style="@style/SingleLineTextView"/>

    <TextView
        android:id="@+id/footer_artist_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/footer_thumbnail"
        android:layout_toRightOf="@id/footer_thumbnail"
        android:layout_below="@id/footer_track_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        tools:text="Artist Name"
        android:textAppearance="?android:textAppearance"
        android:fontFamily="sans-serif-condensed"
        style="@style/SingleLineTextView"/>

</org.opensilk.music.ui2.main.FooterView>