<resources>

    <style name="Orpheus">
        <!--namespace-->
    </style>

    <style name="DragSortList">
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/drag_handle</item>
        <item name="fling_handle_id">@id/drag_handle</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_enabled">true</item>
        <item name="drag_start_mode">onMove</item>
        <item name="float_background_color">@android:color/transparent</item>
    </style>

    <style name="Orpheus.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NowPlayingTicker">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <!--<item name="android:shadowDx">2</item>-->
        <!--<item name="android:shadowDy">2</item>-->
        <item name="android:shadowRadius">3.8</item>
    </style>

    <style name="SeekArcSleepTimer" parent="SeekArcLight">
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GalleryTabs">
        <item name="invertedTabBar">false</item>
    </style>

    <!-- Settings -->
    <style name="SettingsGridBase">
        <item name="android:numColumns">1</item>
    </style>

    <style name="SettingsGrid" parent="SettingsGridBase">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- Tiles -->

    <style name="TileOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tibTint">?attr/colorControlNormal</item>
    </style>

    <style name="GridTileDescriptionLight">
        <item name="android:background">@color/primary_material_light</item>
    </style>

    <style name="GridTileDescriptionDark">
        <item name="android:background">@color/primary_dark_material_dark</item>
    </style>

    <style name="GridTileDescriptionTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridTileDescriptionTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceInverse</item>-->
    </style>

    <style name="GridTileDescriptionTitle.Dark">
    </style>

    <style name="GridTileDescriptionSubTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GridTileDescriptionSubTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceSmallInverse</item>-->
    </style>

    <style name="GridTileDescriptionSubTitle.Dark">

    </style>

    <!-- end tiles -->

    <!-- fabs -->

    <style name="fabDark">
        <item name="fabColor">black</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="fabLight">
        <item name="fabColor">white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="fabLight.Play">
        <item name="fabColor">accent</item>
        <item name="android:src">@drawable/action_playpause_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_play</item>
    </style>

    <style name="fabDark.Play">
        <item name="fabColor">accent</item>
        <item name="android:src">@drawable/action_playpause_white_24dp</item>
        <item name="android:contentDescription">@string/accessibility_play</item>
    </style>

    <style name="fabLight.Next">
        <item name="android:src">@drawable/ic_skip_next_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_next</item>
    </style>

    <style name="fabDark.Next">
        <item name="android:src">@drawable/ic_skip_next_white_24dp</item>
        <item name="android:contentDescription">@string/accessibility_next</item>
    </style>

    <style name="fabLight.Prev">
        <item name="android:src">@drawable/ic_skip_previous_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_prev</item>
    </style>

    <style name="fabDark.Prev">
        <item name="android:src">@drawable/ic_skip_previous_white_24dp</item>
        <item name="android:contentDescription">@string/accessibility_prev</item>
    </style>

    <style name="fabLight.Shuffle">
        <item name="android:src">@drawable/action_shuffle_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_shuffle</item>
    </style>

    <style name="fabDark.Shuffle">
        <item name="android:src">@drawable/action_shuffle_white_24dp</item>
        <item name="android:contentDescription">@string/accessibility_shuffle</item>
    </style>

    <style name="fabLight.Repeat">
        <item name="android:src">@drawable/action_repeat_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_repeat</item>
    </style>

    <style name="fabDark.Repeat">
        <item name="android:src">@drawable/action_repeat_white_24dp</item>
        <item name="android:contentDescription">@string/accessibility_repeat</item>
    </style>

    <!-- end fabs-->

    <!-- now playing buttons -->

    <style name="nowPlayingActionDark">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="nowPlayingActionLight">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="nowPlayingActionLight.Play">
        <item name="android:src">@drawable/action_playpause_black_36dp</item>
        <item name="android:contentDescription">@string/accessibility_play</item>
    </style>

    <style name="nowPlayingActionDark.Play">
        <item name="android:src">@drawable/action_playpause_white_36dp</item>
        <item name="android:contentDescription">@string/accessibility_play</item>
    </style>

    <style name="nowPlayingActionLight.Next">
        <item name="android:src">@drawable/ic_skip_next_black_36dp</item>
        <item name="android:contentDescription">@string/accessibility_next</item>
    </style>

    <style name="nowPlayingActionDark.Next">
        <item name="android:src">@drawable/ic_skip_next_white_36dp</item>
        <item name="android:contentDescription">@string/accessibility_next</item>
    </style>

    <style name="nowPlayingActionLight.Prev">
        <item name="android:src">@drawable/ic_skip_previous_black_36dp</item>
        <item name="android:contentDescription">@string/accessibility_prev</item>
    </style>

    <style name="nowPlayingActionDark.Prev">
        <item name="android:src">@drawable/ic_skip_previous_white_36dp</item>
        <item name="android:contentDescription">@string/accessibility_prev</item>
    </style>

    <style name="nowPlayingActionLight.Shuffle">
        <item name="android:src">@drawable/action_shuffle_black_36dp</item>
        <item name="android:contentDescription">@string/accessibility_shuffle</item>
    </style>

    <style name="nowPlayingActionDark.Shuffle">
        <item name="android:src">@drawable/action_shuffle_white_36dp</item>
        <item name="android:contentDescription">@string/accessibility_shuffle</item>
    </style>

    <style name="nowPlayingActionLight.Repeat">
        <item name="android:src">@drawable/action_repeat_black_36dp</item>
        <item name="android:contentDescription">@string/accessibility_repeat</item>
    </style>

    <style name="nowPlayingActionDark.Repeat">
        <item name="android:src">@drawable/action_repeat_white_36dp</item>
        <item name="android:contentDescription">@string/accessibility_repeat</item>
    </style>

    <!-- end now playing buttons -->

</resources>