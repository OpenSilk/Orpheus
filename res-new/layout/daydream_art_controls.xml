<org.opensilk.music.dream.views.ArtWithControls
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RtlCompat">

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SingleLineTextView"
        android:textAppearance="?android:textAppearanceLarge"/>

    <org.opensilk.common.widget.SquareImageView
        android:id="@+id/album_art"
        android:layout_below="@id/track_title"
        android:layout_width="@dimen/dream_art_size"
        android:layout_height="@dimen/dream_art_size" />

    <LinearLayout
        android:layout_below="@id/album_art"
        android:layout_alignStart="@id/album_art"
        android:layout_alignEnd="@id/album_art"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        style="?android:buttonBarStyle">

        <ImageButton
            android:id="@+id/dream_action_prev"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_skip_previous_white_36dp"
            android:contentDescription="@string/accessibility_prev"
            style="?android:buttonBarButtonStyle"/>

        <ImageButton
            android:id="@+id/dream_action_play"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/action_playpause_white_36dp"
            android:contentDescription="@string/accessibility_play"
            style="?android:buttonBarButtonStyle"/>

        <ImageButton
            android:id="@+id/dream_action_next"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_skip_next_white_36dp"
            android:contentDescription="@string/accessibility_next"
            style="?android:buttonBarButtonStyle"/>

    </LinearLayout>

</org.opensilk.music.dream.views.ArtWithControls>