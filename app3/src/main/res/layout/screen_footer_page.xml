<org.opensilk.music.ui3.main.FooterPageScreenView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opensilk.common.ui.widget.SquareImageView
        android:id="@+id/footer_thumbnail"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"/>

    <ImageButton
        android:id="@+id/footer_playpause_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play_arrow_white_36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/footer_track_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/footer_thumbnail"
        android:layout_toRightOf="@id/footer_thumbnail"
        android:layout_toLeftOf="@id/footer_playpause_btn"
        android:layout_toStartOf="@id/footer_playpause_btn"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        tools:text="Track Title"
        android:textAppearance="?android:textAppearanceMedium"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/footer_artist_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/footer_thumbnail"
        android:layout_toRightOf="@id/footer_thumbnail"
        android:layout_toLeftOf="@id/footer_playpause_btn"
        android:layout_toStartOf="@id/footer_playpause_btn"
        android:layout_below="@id/footer_track_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        tools:text="Artist Name"
        android:textAppearance="?android:textAppearance"
        android:ellipsize="marquee"
        android:singleLine="true"/>

</org.opensilk.music.ui3.main.FooterPageScreenView>