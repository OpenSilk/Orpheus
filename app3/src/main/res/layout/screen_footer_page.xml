<org.opensilk.music.ui3.main.FooterPageScreenView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="?android:selectableItemBackground"
    tools:layout_height="64dp">

    <org.opensilk.common.ui.widget.SquareImageView
        android:id="@+id/footer_thumbnail"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        tools:src="@drawable/default_artwork"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/footer_track_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:text="Track Title"
            android:textAppearance="?android:textAppearanceMedium"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/footer_artist_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:text="Artist Name"
            android:textAppearance="?android:textAppearance"
            android:ellipsize="marquee"
            android:singleLine="true"/>

    </LinearLayout>

    <org.opensilk.common.ui.widget.ImageButtonCheckable
        android:id="@+id/footer_playpause_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        style="?footerPlayStyle"
        tools:tint="@color/black"/>

</org.opensilk.music.ui3.main.FooterPageScreenView>