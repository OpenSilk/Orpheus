<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoPanelHeight="?actionBarSize"
    app:umanoShadowHeight="4dp"
    app:umanoParalaxOffset="100dp"
    app:umanoDragView="@+id/queue_toolbar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/nowplaying_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="org.opensilk.music.ui3.nowplaying.NowPlayingScreenFragment"
            tools:layout="@layout/screen_nowplaying"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="top"
            style="?toolbarStyle"/>

    </FrameLayout>

    <fragment
        android:id="@+id/queue_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:name="org.opensilk.music.ui3.nowplaying.QueueScreenFragment"
        tools:layout="@layout/screen_queue"/>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>