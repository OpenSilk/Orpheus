<org.opensilk.music.ui3.nowplaying.CarModeScreenView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opensilk.common.ui.widget.AnimatedImageView
        android:id="@+id/now_playing_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_artwork"/>

    <!-- current playtime -->
    <TextView
        android:id="@+id/now_playing_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="start"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white_text"
        android:textSize="18sp"
        tools:text="0:00"/>

    <!-- total playtime -->
    <TextView
        android:id="@+id/now_playing_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white_text"
        android:textSize="18sp"
        tools:text="0:00"/>

    <org.opensilk.common.ui.widget.CompatSeekBar
        android:id="@+id/now_playing_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/now_playing_total_time"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:max="1000"
        />

    <LinearLayout
        android:id="@+id/now_playing_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/now_playing_seekbar">

        <ImageButton
            android:id="@+id/now_playing_previous"
            android:layout_width="96dp"
            android:layout_height="96dp"
            tools:src="@drawable/ic_skip_previous_white_48dp"
            style="?carModePrevStyle"/>

        <org.opensilk.common.ui.widget.ImageButtonCheckable
            android:id="@+id/now_playing_play"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@drawable/ic_play_circle_fill_white_48dp"
            style="?carModePlayStyle"/>

        <ImageButton
            android:id="@+id/now_playing_next"
            android:layout_width="96dp"
            android:layout_height="96dp"
            tools:src="@drawable/ic_skip_next_white_48dp"
            style="?carModeNextStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?actionBarSize"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/now_playing_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textSize="34sp"
            tools:text="Trackname"
            style="@style/SingleLineTextView"/>

        <TextView
            android:id="@+id/now_playing_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white_text_secondary"
            android:textSize="24sp"
            tools:text="Artistname"
            style="@style/SingleLineTextView"/>

    </LinearLayout>

</org.opensilk.music.ui3.nowplaying.CarModeScreenView>