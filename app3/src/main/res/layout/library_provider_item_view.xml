<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mtrl.TwoLineListItem">

    <org.opensilk.common.ui.widget.CircleImageView
        android:id="@+id/avatar"
        style="@style/mtrl.TwoLineListItemInner.Avatar"/>

    <include layout="@layout/mtrl_list_item_twoline_textcontainer"/>

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleSmall"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        style="?android:buttonStyleSmall"/>

    <org.opensilk.common.ui.widget.TintImageButton
        android:id="@+id/tile_overflow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_menu_moreoverflow_mtrl_alpha"
        style="@style/TileOverflow"/>

</LinearLayout>