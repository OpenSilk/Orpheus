<resources>
    <!--Common styles for light theme-->
    <style name="Theme.LightOverlay" parent="Theme.LightParent">

        <item name="gridTileDescriptionStyle">@style/GridTileDescriptionLight</item>
        <item name="gridTileDescriptionTitleStyle">@style/GridTileDescriptionTitle.Light</item>
        <item name="gridTileDescriptionSubTitleStyle">@style/GridTileDescriptionSubTitle.Light</item>

        <item name="nowPlayingPlayStyle">@style/nowPlayingActionLight.Play</item>
        <item name="nowPlayingNextStyle">@style/nowPlayingActionLight.Next</item>
        <item name="nowPlayingPrevStyle">@style/nowPlayingActionLight.Prev</item>
        <item name="nowPlayingShuffleStyle">@style/nowPlayingActionLight.Shuffle</item>
        <item name="nowPlayingRepeatStyle">@style/nowPlayingActionLight.Repeat</item>
        <item name="nowPlayingCardBackground">@color/white</item>

        <item name="footerPlayStyle">@style/footerLight.Play</item>

        <item name="controlsPlayStyle">@style/controlsActionLight.Play</item>
        <item name="controlsNextStyle">@style/controlsActionLight.Next</item>
        <item name="controlsPrevStyle">@style/controlsActionLight.Prev</item>
        <item name="controlsShuffleStyle">@style/controlsActionLight.Shuffle</item>
        <item name="controlsRepeatStyle">@style/controlsActionLight.Repeat</item>

        <item name="windowActionModeOverlay">true</item>

        <!--<item name="dialogTheme">@style/LightThemeDialog</item>-->

    </style>

    <style name="Theme.LightConfig" parent="Theme.LightOverlay">
    </style>

    <style name="Theme.Light" parent="Theme.LightBase">

        <item name="colorPrimary">#141414</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#98c902</item>

    </style>

    <style name="LightThemeDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="toolbarStyle">@style/Toolbar.Dark.WhiteOverflow</item>
        <item name="appBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!--Common styles for dark theme-->

    <style name="Theme.DarkOverlay" parent="Theme.DarkParent">

        <item name="gridTileDescriptionStyle">@style/GridTileDescriptionDark</item>
        <item name="gridTileDescriptionTitleStyle">@style/GridTileDescriptionTitle.Dark</item>
        <item name="gridTileDescriptionSubTitleStyle">@style/GridTileDescriptionSubTitle.Dark</item>

        <item name="nowPlayingPlayStyle">@style/nowPlayingActionDark.Play</item>
        <item name="nowPlayingNextStyle">@style/nowPlayingActionDark.Next</item>
        <item name="nowPlayingPrevStyle">@style/nowPlayingActionDark.Prev</item>
        <item name="nowPlayingShuffleStyle">@style/nowPlayingActionDark.Shuffle</item>
        <item name="nowPlayingRepeatStyle">@style/nowPlayingActionDark.Repeat</item>
        <item name="nowPlayingCardBackground">@color/black</item>

        <item name="footerPlayStyle">@style/footerDark.Play</item>

        <item name="controlsPlayStyle">@style/controlsActionDark.Play</item>
        <item name="controlsNextStyle">@style/controlsActionDark.Next</item>
        <item name="controlsPrevStyle">@style/controlsActionDark.Prev</item>
        <item name="controlsShuffleStyle">@style/controlsActionDark.Shuffle</item>
        <item name="controlsRepeatStyle">@style/controlsActionDark.Repeat</item>

        <item name="windowActionModeOverlay">true</item>

        <!--<item name="dialogTheme">@style/DarkThemeDialog</item>-->

    </style>

    <style name="Theme.DarkConfig" parent="Theme.DarkOverlay">
    </style>

    <style name="Theme.Dark" parent="Theme.DarkBase">
        <item name="colorPrimary">#141414</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#98c902</item>
    </style>

    <style name="DarkThemeDialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
        <item name="appBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- End common themes -->

    <!-- Settings themes -->

    <style name="Theme.Settings.Light" parent="Theme.Dialog.LightBase">

    </style>

    <style name="Theme.Settings.Dark" parent="Theme.Dialog.DarkBase">

    </style>

    <!-- end settings themes -->

</resources>