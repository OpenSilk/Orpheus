    <style name="fabLight.Play">
        <item name="fabColor">accent</item>
        <item name="android:src">@drawable/action_playpause_black_24dp</item>
        <item name="android:contentDescription">@string/accessibility_play</item>
    </style>

    <style name="fabDark.Play">
        <item name="fabColor">accent</item>
