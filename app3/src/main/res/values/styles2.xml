<resources>

    <style name="Orpheus">
        <!--namespace-->
    </style>

    <style name="DragSortList">
        <!-- Setup dragsort options-->
        <item name="use_default_controller">true</item>
        <item name="drag_handle_id">@id/drag_handle</item>
        <item name="fling_handle_id">@id/drag_handle</item>
        <item name="remove_enabled">true</item>
        <item name="remove_mode">flingRemove</item>
        <item name="drag_enabled">true</item>
        <item name="drag_start_mode">onMove</item>
        <item name="float_background_color">@android:color/transparent</item>
    </style>

    <style name="Orpheus.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SeekArcSleepTimer" parent="SeekArcLight">
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SeekArcNowPlaying" parent="SeekArcLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">48dp</item>
    </style>

    <style name="GalleryTabs">
        <item name="invertedTabBar">false</item>
    </style>

    <!-- Settings -->
    <style name="SettingsGridBase">
        <item name="android:numColumns">1</item>
    </style>

    <style name="SettingsGrid" parent="SettingsGridBase">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- Tiles -->

    <style name="GalleryGridTile">
    </style>

    <style name="GalleryListTile">

    </style>

    <style name="TileOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_mtrl_alpha</item>
        <item name="tibTint">?attr/colorControlNormal</item>
    </style>

    <style name="GridTileDescriptionLight">
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="GridTileDescriptionDark">
        <item name="android:background">@color/black</item>
    </style>

    <style name="GridTileDescriptionTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridTileDescriptionTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceInverse</item>-->
    </style>

    <style name="GridTileDescriptionTitle.Dark">
    </style>

    <style name="GridTileDescriptionSubTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GridTileDescriptionSubTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceSmallInverse</item>-->
    </style>

    <style name="GridTileDescriptionSubTitle.Dark">

    </style>

    <!-- end tiles -->

    <!-- fabs -->

    <style name="fabDark">
