<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.opensilk.music.plugin.drive">

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:description="@string/app_description"
        android:allowBackup="true">

        <activity android:name="org.opensilk.music.library.drive.ui.ChooserActivity"
            android:exported="true"
            tools:remove="process"/>

        <activity android:name="org.opensilk.music.library.drive.ui.SettingsActivity"
            android:exported="true"
            tools:remove="process"/>

        <!--Google drive provider-->
        <provider android:name="org.opensilk.music.library.drive.provider.DriveLibraryProvider"
            android:exported="true"
            android:permission="${libraryPermission}"
            android:authorities="${applicationId}.provider.driveLibrary"
            tools:replace="authorities"
            tools:remove="process"/>

    </application>

</manifest>
