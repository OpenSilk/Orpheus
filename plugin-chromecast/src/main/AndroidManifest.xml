<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.opensilk.music.plugin.googlecast"
    android:sharedUserId="${sharedId}">

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:icon="@drawable/cast_grey600_36dp"
        android:name=".CastApp">

        <activity android:name="org.opensilk.music.renderer.googlecast.ui.DevicePickerActivity"
            android:process="${playbackProcess}"
            tools:replace="process"/>

        <service android:name="org.opensilk.music.renderer.googlecast.CastRendererService"
            android:process="${playbackProcess}"
            tools:replace="process"/>

    </application>

</manifest>
