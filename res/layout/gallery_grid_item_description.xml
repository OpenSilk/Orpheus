<org.opensilk.music.widgets.GridTileDescription
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_description"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    style="?gridTileDescriptionStyle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            tools:text="Artist"
            style="?gridTileDescriptionTitleStyle"/>

        <TextView
            android:id="@+id/tile_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            tools:text="Num Albums"
            style="?gridTileDescriptionSubTitleStyle"/>

    </LinearLayout>

    <org.opensilk.common.widget.TintImageButton
        android:id="@+id/tile_overflow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_menu_moreoverflow_mtrl_alpha"
        style="@style/TileOverflow"/>

</org.opensilk.music.widgets.GridTileDescription>