<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/drive_about_title">

        <Preference
            android:key="about_me"
            android:title="@string/drive_about_me"
            android:summary="@string/drive_about_me_url">
            <intent android:action="android.intent.action.VIEW"
                android:data="@string/drive_about_me_url"/>
        </Preference>

        <Preference
            android:key="version"
            android:title="@string/drive_version" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/drive_legal_title">

        <Preference
            android:key="licenses"
            android:title="@string/drive_open_source_licenses"/>

    </PreferenceCategory>

</PreferenceScreen>